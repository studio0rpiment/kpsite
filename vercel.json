{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html",
      "has": [
        {
          "type": "host",
          "value": "kevinpatton.site"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/index.html",
      "has": [
        {
          "type": "host", 
          "value": "www.kevinpatton.site"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://kpcv.cargo.site/",
      "has": [
        {
          "type": "host",
          "value": "cv.kevinpatton.site"
        }
      ],
      "permanent": true
    },
    {
      "source": "/(.*)",
      "destination": "https://kpcv.cargo.site/teaching",
      "has": [
        {
          "type": "host",
          "value": "teaching.kevinpatton.site"
        }
      ],
      "permanent": true
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}